<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/learn_item_card_view"
        style="@style/CardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/learn_item_card_view_infinitive"
                style="@style/CardView.Card.Style"
                android:text="Карточка" />

            <TextView
                android:id="@+id/learn_item_card_view_second_form"
                style="@style/CardView.Card.Style"
                android:text="Карточка" />

            <TextView
                android:id="@+id/learn_item_card_view_third_form"
                style="@style/CardView.Card.Style"
                android:text="Карточка" />

            <TextView
                android:id="@+id/learn_item_card_view_translate"
                style="@style/CardView.Card.Style"
                android:text="Карточка" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>